{% extends 'base.html.twig' %}

{% block messaging %}

{% block body %}
    <div class="container-fluid">
        <div class="dropright d-flex float-right">
            {% include 'components/_switch_button.html.twig' %}
            <div class="dropdown-menu border-0 ml-5" aria-labelledby="dropdownMenuButton">
                <div class="row mt-5 ml-5" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="frame text-white bg-primary mb-3" style="height:500px; border-radius:45px;">
                        <div class="card-body">
                            {% if app.user %}
                                <div class="row justify-content-center">
                                    <div class="d-flex ">
                                        <img class="avatar mt-3" src="{{ app.user.imagePicture }}"
                                             alt="avatar">
                                    </div>
                                </div>
                            {% endif %}
                            <div class="example-wrapper overflow-auto">
                                {{ form_start(form) }}
                                {{ form_row(form.content) }}
                                {{ form_rest(form) }}
                                <div class="row justify-content-center">
                                    <a class="btn btn-success btn-lg m-3" role="button" href="{{ path('default') }}">Return</a>
                                    <button class="btn btn-success btn-lg m-3" role="button"
                                            aria-pressed="true">{{ button_label|default('Send') }}</button>
                                </div>
                                {{ form_end(form) }}
                            </div>
                            {% for message in app.flashes('success') %}
                                <div class="flash-notice">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
{% endblock %}
