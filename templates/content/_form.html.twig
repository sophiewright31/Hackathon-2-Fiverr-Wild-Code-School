    {{ form_start(form) }}
    {{ form_row(form.Message) }}
    {{ form_rest(form) }}
    <div class="row justify-content-center">
        <a class="btn btn-success btn-lg m-3" role="button" href="{{ path('mate') }}">Return</a>
        <a class="btn btn-success btn-lg m-3" role="button" href="{{ path('conv') }}">Send</a>
    </div>
    {{ form_end(form) }}
</div>



