{% extends 'components/_card.html.twig' %}

{% block home %}
	{% if app.user %}
		<div class="row justify-content-center">
			<div class="d-flex flex-column">
				<img class="avatar my-3 mx-auto" src="{{ app.user.imagePicture }}" alt="avatar">
				{% block username%}
					<h3 class="text-light mx-auto">
						Hi
						{{ app.user.firstname }}
						!
					</h3>
				{% endblock %}
				<div class="row justify-content-center">
					<a class="btn btn-success btn-lg m-3 mt-5" role="button" href="{{ path('mate') }}">Find a Mate</a>
				</div>
			</div>
		</div>
	{% endif %}
{% endblock %}